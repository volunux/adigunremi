extends layout

include include/amix

block content

	.actor-detail

		.actor-nav
			include ./include/amenu

		.actor-detail-image
			for cover in actor.cover_image
				+fixDir(cover.path)


		.adbody
			if actor.nickname
				p Name : #{actor.nickname}
			p Full Name : #{actor.name}
			p Date of Birth : #{actor.dOb_ftd}
			p Place of Birth : #{actor.place_of_birth}
			p Nationality : #{actor.nationality}
			p Gender : #{actor.gender}
			p Spouse or Partner : #{actor.spouse_or_partner}
			p Networth : #{actor.networth}
			p Social Media Profiles:
				if actor.sp_facebook
						a(href=actor.sp_facebook , class='btn btn-primary btn-sm mr-2') Facebook
				if actor.sp_twitter
					a(href=actor.sp_twitter , class='btn btn-info btn-sm mr-2') Twitter
				if actor.sp_instagram
					a(href=actor.sp_instagram , class='btn btn-secondary btn-sm mr-2') Instagram

			p.bio Biography : #{actor.biography}