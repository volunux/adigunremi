mixin fixDir(dir)
	- var name = dir.slice(7)
	-	var fName = name.replace(/\\/g , '/')
		img(class ='', src = '/' + fName)

mixin fixDirT(dir)
	- var name = dir.slice(12)
	-	var fName = name.replace(/\\/g , '/')
		img(class ='', src = fName)


mixin fixDirTrailer(dir)
	- var name = dir.slice(7)
	-	var fName = name.replace(/\\/g , '/')
		source(class ='', src ='/' + fName)

