extends ../layout

block content
	.tadd
		.taddhead
		
		.tform
			h4 All fields marked with * are required to be filled to be able to properly submit the application.

			form(action =''	, method ='post'	,	enctype ='multipart/form-data')

				p
					label(for ='title') Title :
						span *
					input(type ='text'	,	name ='title'	,	id ='title' , required ='true' , value =(undefined === tData ? '' : tData.title) , )

				p
					label(for ='running_time') Running Time :
						span *
					input(type ='text'	,	name ='running_time'	,	id ='running_time' , required ='true' , value =(undefined === tData ? '' : tData.running_time))

				p
					label(for ='released_date') Released Date :
						span *
					select(name ='released_date'	, id ='released_date' , required ='true' , value =(undefined === tData ? '' : tData.released_date))
						for date in year
							option(value= date._id) #{date.year}

				p
					label(for ='rating') Ratings :
					select(name ='rating'	, id ='rating')
						option(value ='0') 0
						option(value ='1') 1
						option(value ='2') 2
						option(value ='3') 3
						option(value ='4') 4
						option(value ='5') 5

				p
					label(for ='director') Director :
						span 
					input(type ='text'	,	name ='director'	,	id ='director' , value =(undefined === tData ? '' : tData.director))

				p
					label(for ='producer') Producer :
						span *
					input(type ='text'	,	name ='producer'	,	id ='producer' , required ='true' , value =(undefined === tData ? '' : tData.producer))

				h5 Languages Spoken

				p
					label(for ='lanugage_spoken_one') Language 1 * :
					select(name ='spoken_languages'	, id ='language_spoken_one' , required ='true')
						for language in languages
							option(value= language._id) #{language.language}

				p
					label(for ='lanugage_spoken_two') Language 2 * :
					select(name ='spoken_languages'	, id ='langugage_spoken_two' ,  required ='true')
						for language in languages
							option(value= language._id) #{language.language}

				p
					label(for ='lanugage_spoken_three') Language 3 :
					select(name ='spoken_languages'	, id ='language_spoken_three' )
						for language in languages
							option(value= language._id) #{language.language}

				h5 Production Countries

				p
					label(for ='country') Production Country 1 * :
					select(name ='production_countries'	, id ='' , required ='true')
						for country in countries
							option(value= country._id) #{country.country}

				p
					label(for ='country') Production Country 2 :
					select(name ='production_countries'	, id ='')
						for country in countries
							option(value= country._id) #{country.country}

				h5 Genre
			
				p
					label(for ='') Genre 1 * :
					select(name ='genre'	, id ='' , required ='true')
						for genre in genres
							option(value =genre._id) #{genre.genre} 

				p
					label(for ='') Genre 2 * :
					select(name ='genre'	, id ='' , required ='true')
						for genre in genres
							option(value =genre._id) #{genre.genre} 

				p
					label(for ='') Genre 3 * :
					select(name ='genre'	, id ='' , required ='true')
						for genre in genres
							option(value =genre._id) #{genre.genre} 

				p
					label(for ='') Genre 4 :
					select(name ='genre'	, id ='')
						for genre in genres
							option(value =genre._id) #{genre.genre} 

				h5 Production Companies and Studio

				p
					label(for ='production_companies') Production Companies 1 :

					select(name ='production_companies'	, id ='')
						for studio in studios
							option(value= studio._id) #{studio.name}

				p
					label(for ='production_companies') Production Companies 2 :

					select(name ='production_companies'	, id ='')
						for studio in studios
							option(value= studio._id) #{studio.name}

				p
					label(for ='budget') Budget :
						span 
					input(type ='text'	,	name ='budget'	,	id ='budget' , value =(undefined === tData ? '' : tData.budget))

				p
					label(for ='revenue') Revenue :
						span 
					input(type ='text'	,	name ='revenue'	,	id ='revenue' , value =(undefined === tData ? '' : tData.revenue))

				p
					label(for ='reviewText') Plot :
						span *
				textarea(id ='reviewText'	, name ='plot' required ='true' ) #{(undefined === tData ? '' : tData.plot)}

				p 
					label(for ='cover_image') Cover Image * :
					input(type ='file' ,	name ='cover_image'	,	accept ='image/*' , required ='true')

				h6.photos Photos:

				p 
					label(for ='photoname1') Photo 1 * :
					input(type ='file' ,	name ='photo'	,	accept ='image/*' , required ='true')

				p
					label(for ='photoname2') Photo 2 :
					input(type ='file' ,	name ='photo'	,	accept ='image/*')

				p
					label(for ='photoname3') Photo 3 :
					input(type ='file' ,	name ='photo'	,	accept ='image/*')

				p
					label(for ='photoname4') Photo 4 :
					input(type ='file' ,	name ='photo'	,	accept ='image/*')

				h6.trailer Trailer

				p
					label(for ='trailername') Trailer :
					input(type ='file' , name ='trailer'	,	accept ='video/*')

				button(type ='submit'	, title ='Submit') Submit