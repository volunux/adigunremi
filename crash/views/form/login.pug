extends ../layout

block content

	h1 Login

	.signup
		form(action =''	method ='post')
			p
				label(for ='username') Username :
					span *
				input(name ='username'  id ='username' type ='text'  placeholder ='Username' required ='true' autofocus ='true' value =(undefined === user ? '' : user.username))

			p
				label(for ='password') Password :
					span *
				input(name ='password'  id ='password' type ='password'  placeholder ='Password' required ='true' autofocus ='true' value =(undefined === user ? '' : user.password))
				
			button(type ='submit' title ='Submit') Submit

